<odoo>
    <template id="report_template">
        <t t-call="web.basic_layout">
            <t t-set="doc" t-value="docs[0]"/>
            <div class="page">
                <h2>Digizilla Report</h2>
                <table class="table table-condensed">
                    <tr><th>Name</th><td><span t-esc="doc.name"/></td></tr>
                    <tr><th>Gender</th><td><span t-esc="doc.gender"/></td></tr>
                    <tr><th>Country</th><td><span t-esc="doc.country_id.name if doc.country_id else ''"/></td></tr>
                    <tr><th>Birth Date</th><td><span t-esc="doc.birth_date"/></td></tr>
                    <tr><th>Age</th><td><span t-esc="doc.age"/></td></tr>
                    <tr><th>Tags</th>
                        <td>
                            <t t-foreach="doc.tag_ids" t-as="tag" t-key="tag.id">
                                <span t-esc="tag.name"/>
                                <t t-if="tag != doc.tag_ids[-1]">, </t>
                            </t>
                        </td>
                    </tr>
                    <tr><th>Customer</th><td><span t-esc="doc.customer_id.name"/></td></tr>
                    <tr><th>No. of Sales Orders</th><td><span t-esc="doc.no_of_sales_orders"/></td></tr>
                    <tr><th>Notes</th><td><t t-raw="doc.notes"/></td></tr>
                    <tr><th>Comments</th><td><span t-esc="doc.comments"/></td></tr>
                </table>
            </div>
        </t>
    </template>
</odoo>
